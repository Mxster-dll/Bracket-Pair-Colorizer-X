{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es2018",
            "dom"
        ],
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "rootDir": ".",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "test/test_files"
    ]
}